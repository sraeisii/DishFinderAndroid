<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/dish_ingredient_item"
        android:layout_width="75dp"
        android:layout_height="120dp"
        android:layoutDirection="rtl"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        android:layout_margin="5dp"
        >

        <RelativeLayout
            android:id="@+id/dish_ingredient_item_rl"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ingredient_clicked_button_shape"
            android:gravity="top"
            >
            <ImageButton
                android:id="@+id/dish_ingredient_item_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:textColor="#AC3637" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dish_ingredient_item_name"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:text="salam"
                android:textColor="#000"
                android:textSize="10sp"
                android:layout_marginTop="75dp"/>

            <TextView
                android:id="@+id/dish_ingredient_item_unit"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="#000"
                android:textSize="10sp"
                android:layout_below="@id/dish_ingredient_item_name"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>