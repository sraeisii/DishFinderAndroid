<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/dish_ingredient_item"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layoutDirection="rtl"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        android:foregroundGravity="center_horizontal"
        >
        <RelativeLayout
            android:id="@+id/dish_ingredient_item_rl"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ingredinet_clicked_buttonshape">

            <ImageButton
                android:id="@+id/dish_ingredient_item_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:textColor="#AC3637"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="bottom|right"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/dish_ingredient_item_name"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="#000"
                android:textSize="10sp"
                android:text="salam"
                android:gravity="center"/>

            <TextView
                android:id="@+id/dish_ingredient_item_unit"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="#000"
                android:textSize="10sp" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>